{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "paths": { "*": [ "*" ] },
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
