{
  "name": "dotstar-node",
  "version": "1.0.0",
  "description": "Interacting with Dotstar LEDs via Node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p src",
    "build:all": "npm run build && (cd example/server && npm run build) && (cd example/dotstar-app && npm run build)",
    "sync": "nodemon",
    "postinstall": "npm run build",
    "test": "ts-node -P src/tsconfig.json example/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexeden/dotstar-node.git"
  },
  "author": "Alex Eden",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexeden/dotstar-node/issues"
  },
  "homepage": "https://github.com/alexeden/dotstar-node#readme",
  "devDependencies": {
    "@types/node": "^10.12.2",
    "@types/ramda": "^0.26.0",
    "nodemon": "^1.18.5",
    "rimraf": "^2.6.2",
    "rsync": "^0.6.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "bindings": "^1.3.0",
    "chalk": "^2.4.1",
    "gradient-string": "^1.2.0",
    "nan": "^2.11.1",
    "node-addon-api": "^1.6.0",
    "ramda": "^0.25.0"
  },
  "nodemonConfig": {
    "ext": "ts,json",
    "exec": "npm run build:all && node sync",
    "events": {},
    "watch": [
      "src/",
      "example/server/src"
    ]
  }
}
