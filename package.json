{
  "name": "dotstar-node",
  "version": "1.0.0",
  "description": "Interacting with Dotstar LEDs via Node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p src",
    "dev": "nodemon -w dist -d 1 --exec \"node dist\"",
    "sync": "nodemon -w src --exec \"npm run build && node sync\"",
    "postinstall": "npm run build",
    "test": "ts-node -P src/tsconfig.json example/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexeden/dotstar-node.git"
  },
  "author": "Alex Eden",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexeden/dotstar-node/issues"
  },
  "homepage": "https://github.com/alexeden/dotstar-node#readme",
  "devDependencies": {
    "@types/node": "^10.12.2",
    "@types/ramda": "^0.26.0",
    "nodemon": "^1.18.5",
    "rimraf": "^2.6.2",
    "rsync": "^0.6.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "gradient-string": "^1.2.0",
    "pi-spi": "^1.0.3",
    "ramda": "^0.25.0",
    "rxjs": "^6.3.3"
  },
  "nodemonConfig": {
    "ext": "ts",
    "exec": "node dist/index.js",
    "events": {},
    "watch": [
      "dist/"
    ]
  }
}
